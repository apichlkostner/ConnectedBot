<launch>
    <param name="joy_node/dev" value="/dev/input/js0"/>
    <node pkg="connected_bot_app" type="joystick_node.py" name="joystick_node"/>
    <node pkg="joy" type="joy_node" name="joy"/>

    <group>
        <machine name="raspi" address="raspi" env-loader="~/.ros_setup.sh" default="true"/>
        <include file="$(find video_stream_opencv)/launch/webcam.launch"/>
        <node pkg="rosserial_python" type="serial_node.py" name="serial" args="/dev/ttyUSB0" machine="raspi"/>
    </group>
</launch>